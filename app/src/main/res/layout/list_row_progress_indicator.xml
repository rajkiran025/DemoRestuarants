<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.example.myapplication.codecraftrestaurant.viewmodel.ProgressIndicatorViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_top_progress_indicator"
        android:paddingBottom="@dimen/padding_bottom_progress_indicator">

        <ProgressBar
            android:layout_width="@dimen/progress_width_height"
            android:layout_height="@dimen/progress_width_height" />

    </LinearLayout>
</layout>